.form-signin
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    %h1.h3.mb-3.font-weight-normal Cadastre-se
    .form-inputs
      = f.input :email, 
        label: false,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email", id: 'inputEmail', placeholder: 'Email' }

      = f.input :password,
        label: false,
        required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password", placeholder: "Senha", id: 'inputPassword' }

      = f.input :password_confirmation,
        label: false,
        required: true,
        input_html: { autocomplete: "new-password", placeholder: 'Confirme a senha', id: 'inputPasswordConfirmation' }
      
      = f.input :cpf_cnpj,
        label: false,
        required: true,
        hint: 'Apenas n√∫meros',
        input_html: { placeholder: 'CPF ou CNPJ' }

    .form-actions
      = f.button :submit, "Sign up", class: 'btn btn-lg btn-primary btn-block'

      %p.mt-5.mb-3
        = render "devise/shared/links"