.form-signin
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h1.h3.mb-3.font-weight-normal Login do Usu√°rio
    .form-inputs
      = f.input :email, 
        label: false,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email", id: 'inputEmail', placeholder: 'Email' }

      = f.input :password,
        label: false,
        required: false,
        input_html: { autocomplete: "current-password", placeholder: "******", id: 'inputPassword' }
      .checkbox.mb-3
        = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Logar", class: 'btn btn-lg btn-primary btn-block'

      %p.mt-5.mb-3
        = render "devise/shared/links"